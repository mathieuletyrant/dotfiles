# Check if 1Password CLI is installed
if ! command -v op &> /dev/null; then
  echo "1Password CLI (op) is not installed. Please install it first."
  return 1
fi

# Check if we're signed in to 1Password
if ! op account get &> /dev/null; then
  echo "Not signed in to 1Password. Please run 'op signin' first."
  return 1
fi

# Check if an item name/id was provided
if [[ -z "$1" ]]; then
  echo "Usage: op-export <item-name-or-id>"
  return 1
fi

local item="$1"

# Get the item details from 1Password
local result=$(op item get "$item" --format json)

if [[ $? -ne 0 ]]; then
  echo "Failed to get item '$item' from 1Password"
  return 1
fi


# Process each field in the item
echo "Exporting credentials from 1Password item: $item"

local name=$(echo $result | jq -r '.fields[] | select(.label == "username") | .value')
local credential=$(echo $result | jq -r '.fields[] | select(.label == "credential") | .value')

if [[ -n "$name" && -n "$credential" ]]; then
  export "$name"="$credential"
  echo "Exported: $name=${credential:0:5}*****"
fi
